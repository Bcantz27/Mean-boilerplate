doctype html
html(ng-app="myApp")
  head
    title= (app.name + " - " + app.slogan)
    base(href="/")
    meta(charset="utf-8")
    meta(name="author" content="" + app.author + "")
    meta(name="description" content="" + app.desc + "")
    meta(name="keywords" content="" + app.keywords + "")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel="shortcut icon" href="/favicon.ico")
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css")
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css")
    link(rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css")
    link(rel='stylesheet' href='/css/style.css')
    block head_end

  body

    nav.navbar.navbar-default(ng-controller="NavbarController")
        .container-fluid
            .navbar-header
                button.pull-right.navbar-toggle.collapsed(type='button',  ng-init="navCollapsed = true", ng-click="navCollapsed = !navCollapsed")
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.pull-left.nav-brand(href="/") #{app.name}
            .navbar-responsive-collapse.collapse.navbar-collapse(collapse="navCollapsed")
                ul.nav.navbar-nav.navbar-right(ng-if="$root.authUser != null")
                    li
                        a.text-center(href="/account") {{$root.authUser.name}}
                    li(ng-if="isAdmin()")
                        a.text-center(href="/admin") Control Panel
                    li
                        a.text-center(href="" ng-click="logout()") Logout 
                            span.fa.fa-sign-out
                ul.nav.navbar-nav.navbar-right(ng-if="$root.authUser == null")
                    li
                        a.text-center(href="/login")  Login 
                            span.fa.fa-sign-in
                    li  
                        a.text-center(href="/signup")  Signup 
                            span.fa.fa-pencil-square-o
    
    .container-fluid
        div(ng-view)

    footer
        p.text-center &copy; 2015 #{app.name}

    script(type='text/javascript' src='/bower_components/jquery/dist/jquery.min.js')
    script(type='text/javascript' src='https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js')
    script(type='text/javascript' src='https://code.angularjs.org/1.4.7/angular-route.min.js')
    script(type='text/javascript' src='https://cdnjs.cloudflare.com/ajax/libs/angular-ui-bootstrap/0.13.4/ui-bootstrap.min.js')
    script(type='text/javascript' src='/bower_components/oclazyload/dist/ocLazyLoad.js')
    script(type='text/javascript' src='/bower_components/Chart.js/Chart.min.js')
    script(type='text/javascript' src='/bower_components/metisMenu/dist/metisMenu.min.js')
    script(src="/js/app.js")
    script(src="/js/directives/directives.js")
    script(src="/js/directives/dashboard/stats/stats.js")
    script(src="/js/controllers/controllers.js")
    script(src="/js/services/services.js")

    script.
        $('#side-menu').metisMenu();

    block body_end